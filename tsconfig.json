{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "commonjs",
		"declaration": true,
		"declarationDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
  },
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules", "examples/**/*", "__tests__/**/*"]
}
