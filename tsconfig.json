{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@application": ["application/index"],
      "@config": ["config/index"],
      "@errors": ["errors/index"],
      "@factory": ["factory/index"],
      "@http": ["http/index"],
      "@middleware": ["middleware/index"],
      "@parser": ["parser/index"],
      "@router": ["router/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "examples/**/*", "__tests__/**/*"]
}
